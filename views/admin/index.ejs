<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <title>Blog de Viajes / Admin</title>
  </head>
  <body>
    <% include ../partials/encabezado_privado %>
    <div class="container mt-4 col-md-10">
      <h4 class="text">Admin - mis publicaciones:</h4>

      <% if (mensaje && mensaje.length > 0) { %>
      <h5 class="text-warning mt-4">
        <i class="fas fa-info-circle"></i> <%=mensaje%>
      </h5>
      <% } %>

      <div class="row mx-auto">
        <table
          class="table table-sm table-hover bg-white border border-2 rounded"
        >
          <thead>
            <tr>
              <th scope="col"><i class="fas fa-barcode"></i> Codigo</th>
              <th scope="col">Titulo</th>
              <th scope="col">Resumen</th>
              <th scope="col">Votos</th>
              <th scope="col">Foto</th>
              <th scope="col">Fecha</th>
              <th scope="col">Editar</th>
              <th scope="col">Eliminar</th>
            </tr>
          </thead>
          <tbody>
            <% publicaciones.forEach( (publicacion) => { %>
            <tr>
              <td><%=publicacion.id%></td>
              <td><%=publicacion.titulo%></td>
              <td><%=publicacion.resumen%></td>
              <td><%=publicacion.votos%></td>
              <td><%=publicacion.foto%></td>
              <td>
                <%= publicacion.fecha_hora.getFullYear() %>/ <%=
                publicacion.fecha_hora.getMonth()+1 %>/ <%=
                publicacion.fecha_hora.getDate() %>
              </td>
              <td>
                <a
                  name=""
                  id=""
                  class="btn btn-warning"
                  href="/admin/actualizar_publicacion?id=<%=publicacion.id%>"
                  role="button"
                  ><i class="far fa-edit"></i
                ></a>
              </td>
              <td>
                <a
                  name=""
                  id=""
                  class="btn btn-danger"
                  href="/admin/procesar_eliminar?id=<%=publicacion.id%>"
                  onclick="return confirm('Desea eliminar esta publicaciÃ³n ?')"
                  role="button"
                  ><i class="fas fa-trash-alt"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <a
        name=""
        id=""
        class="btn btn-primary"
        href="/admin/agregar"
        role="button"
        ><i class="fas fa-plus-square"></i> Nueva Publicacion</a
      >
    </div>

    <% include ../partials/pie %> <% include ../partials/script %>
  </body>
</html>
