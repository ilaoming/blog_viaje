<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <title>Blog de Viajes / Perfil</title>
  </head>
  <body>
    <% include ../partials/encabezado_privado %>
    <div class="container mt-4 col-md-10">
      <h4 class="text">Perfil</h4>

      <% if (mensaje && mensaje.length > 0) { %>
      <h5 class="text-warning mt-4">
        <i class="fas fa-info-circle"></i> <%=mensaje%>
      </h5>
      <% } %>
    
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="../avatars/<%=usuario.avatar%>" class="img-fluid rounded-start mt-3" alt="Avatar">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title text-dark">Alias : <%=usuario.pseudonimo%></h5>
              <h6 class="card-text text-dark">Numero de publicaciones : <%=numPublicaciones%></h6>
              <h6 class="card-text text-dark">Email : <%=usuario.email%></h6>
              <h6 class="card-text text-dark">Total votos : <%=votos%></h6>
              <a name="editarPerfil" id="editarPerfil" class="btn btn-warning" href="#" role="button">Editar</a>
            </div>
          </div>
        </div>
      </div>

    </div>
    <% include ../partials/pie %> <% include ../partials/script %>
  </body>
</html>
